<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" scanPeriod="60 seconds">

  <!-- Console Appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%highlight([%d{yyyy-MM-dd HH:mm:ss}] %replace(%-5level){
        'INFO','INFO ‚úÖ'
        'ERROR','ERROR ‚ùå'
        'DEBUG','DEBUG üêõ'
        'WARN','WARN ‚ö†Ô∏è'
        } %msg%n)
      </pattern>
    </encoder>
  </appender>

  <!-- Rolling File Appender -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/devpilot-cli.log</file>
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %-5level - %msg%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/devpilot-cli.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- Log levels -->
  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>

  <!-- More fine-grained logging -->
  <logger name="com.trinhminhtriet.devpilot" level="DEBUG"/>
</configuration>
